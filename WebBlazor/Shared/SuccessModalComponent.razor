<ModalComponent Id=@Id Title=@(string.IsNullOrEmpty(Title)?"Başarılı":Title) Message=@Message TitleStyle="background-color:green" Ok=true ApprovalOnPress=@ApprovalOnPress/>

@code {
    [Parameter]
    public string Id { get; set; }
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Message { get; set; }
    [Parameter]
    public EventCallback<MouseEventArgs> ApprovalOnPress { get; set; }
}
