<div class="modal fade" id="@Id" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document" style="background-color:#00000099">
        <div class="modal-content">
            <div class="modal-header" style="@TitleStyle;display:block;">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <h4 style="font-weight:bold;color:#000000">@Title</h4>
                    </div>
                </div>
            </div>
            <div class="modal-body text-center">
                <p>@Message</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="@ApprovalOnPress" style="background-color:#30a7ab;border-color:black;font-size:15px;color:#ffffff">@(Ok?"Tamam":Approval)</button>
                @if (!Ok)
                {
                    <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="@DenialOnPress" style="background-color:#ffffff;border-color:black;font-size:15px;color:#38aaae">@Denial</button>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Id { get; set; }
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Message { get; set; }
    [Parameter]
    public string TitleStyle { get; set; }
    [Parameter]
    public bool Ok { get; set; }
    [Parameter]
    public string Approval { get; set; }
    [Parameter]
    public string Denial { get; set; }
    [Parameter]
    public EventCallback<MouseEventArgs> ApprovalOnPress { get; set; }
    [Parameter]
    public EventCallback<MouseEventArgs> DenialOnPress { get; set; }
}
